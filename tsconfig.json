{
  "compilerOptions": {
    // Modules
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    // Type Checking
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "allowSyntheticDefaultImports": true,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "useUnknownInCatchVariables": true,
    "useDefineForClassFields": true,
    // Emit
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "inlineSources": true,
    "newLine": "lf",
    "noEmitHelpers": true,
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // Language and Environment
    "experimentalDecorators": true,
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    // Other
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@builders/*": [
        "src/builders/*"
      ],
      "@typings/*": [
        "src/typings/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    },
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "typedocOptions": {
    "name": "Express Custom Documentation",
    "customTitle": "Express Custom Documentation",
    "customTitleLink": "https://slekup.github.io/express-custom/",
    "customDescription": "The type documentation for Express Custom",
    "plugin": [
      "typedoc-plugin-mdn-links",
      "typedoc-plugin-extras",
    ],
    "entryPoints": [
      "src"
    ],
    "entryPointStrategy": "Expand",
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ],
    "externalPattern": [
      "**/node_modules/**"
    ],
    "includes": [
      "src"
    ],
    "out": "docs",
    "includeVersion": true,
    "readme": "README.md",
    "showConfig": false,
  }
}
