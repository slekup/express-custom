{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "module": "NodeNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "baseUrl": "./",
    "outDir": "dist",
    "paths": {
      "@builders/*": [
        "src/builders/*"
      ],
      "@typings/*": [
        "src/typings/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    },
  },
  "include": [
    "src/**/*",
    "environment.d.ts",
    "package.json",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "typedocOptions": {
    "name": "Express Custom Documentation",
    "customTitle": "Express Custom Documentation",
    "customTitleLink": "https://slekup.github.io/express-custom/",
    "customDescription": "The type documentation for Express Custom",
    "plugin": [
      "typedoc-plugin-mdn-links",
      "typedoc-plugin-extras",
    ],
    "entryPoints": [
      "src"
    ],
    "entryPointStrategy": "Expand",
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ],
    "externalPattern": [
      "**/node_modules/**"
    ],
    "includes": [
      "src"
    ],
    "out": "docs",
    "includeVersion": true,
    "readme": "README.md",
    "showConfig": false,
  }
}