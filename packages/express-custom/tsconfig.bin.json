{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": false,
    "outDir": "./dist/bin",
    "baseUrl": "./src",
    "paths": {
      "@builders/*": ["builders/*"],
      "@typings/*": ["typings/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["./src/bin/**/*"],
  "exclude": ["node_modules"]
}
