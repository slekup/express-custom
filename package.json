{
  "name": "express-custom",
  "version": "0.0.7",
  "description": "Enhance your express app with builders, Next.js documentation, schema validation, rate-limiting, error handling, and more with this easy-to-use library.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "gensite": "./dist/bin/bin/gensite.js",
    "export-api": "./dist/bin/bin/export-api.js",
    "create-api": "./dist/bin/bin/create-api.js"
  },
  "scripts": {
    "format": "prettier --ignore-path .gitignore --ignore-unknown --write \"src/**/*.ts\"",
    "format:check": "prettier --ignore-path .gitignore --ignore-unknown --check \"src/**/*.ts\"",
    "lint": "eslint src/**/*.ts --ext .ts && tsc",
    "lint:fix": "eslint --fix src/**/*.ts --ext .ts && tsc",
    "copy:site": "copyfiles -u 1 --exclude site/node_modules/** --exclude site/out/** --exclude site/.next/** site/**/* dist/site",
    "copy": "npm run copy:site",
    "build:bin": "rimraf dist/bin && tsc --build tsconfig.bin.json",
    "build:nocheck": "rimraf dist && tsup && npm run copy && npm run build:bin",
    "build": "npm run lint:fix && npm run build:nocheck && npm run format",
    "docs": "rimraf docs && typedoc",
    "precommit": "npm run lint:fix && npm run format"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/slekup/express-custom"
  },
  "keywords": [
    "express",
    "custom",
    "docs",
    "documentation",
    "api",
    "nodejs"
  ],
  "author": "Slekup",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/slekup/express-custom/issues"
  },
  "homepage": "https://github.com/slekup/express-custom#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "dependencies": {
    "colors": "^1.4.0",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "highlight.js": "^11.8.0",
    "logform": "^2.5.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.21.8",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "copyfiles": "^2.4.1",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^46.2.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-prettier": "^0.0.0-empty",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "tsup": "^6.7.0"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always"
  }
}
